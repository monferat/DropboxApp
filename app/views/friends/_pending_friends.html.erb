<div class="tab-pane fade" id="pending" role="tabpanel" aria-labelledby="v-pills-pending-tab">
<main role="main">
  <div class="users-title">
    <h2>Pending Friends</h2>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
      </tr>
    </thead>
    <tbody>
      <% unless @pending_friends.empty? %>
        <% @pending_friends.each do |f| %>
          <tr>
            <td><%= f.name %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</main>
</div>